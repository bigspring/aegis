{% block header %}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="shortcut icon" href="path/to/favicon.png">

		<title>Aegis</title>
		<meta name="description" content="">

		<!-- Latest compiled and minified CSS from CDN -->
		<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css">
		<link href="{{ basecss }}" rel="stylesheet">

		{{ render_styles(template_styles) }}

		<!-- Respond.js for IE8 support of media queries -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
	</head>

{% endblock %}

{% block subheader %}

	<body>
	<nav class="navbar navbar-inverse" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">AEGIS</a>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-left">
					{% for mod, submod in navigation %}
						{% if mod != 'user' %}
							<li class="{{ (module == mod) ? 'active' : '' }}"><a href="{{ site_url() }}{{ mod }}"><i class="fa {{ submod.icon }}"></i> {{ submod.name|title }}</a></li>
						{% endif %}
					{% endfor %}
				</ul>

				<ul class="nav navbar-nav navbar-right">
					{#{% if manage_user_rights %}#}
						<li class="{{ (module == 'users') ? 'active' : '' }}"><a href="{{ site_url() }}user/users"><i class="fa fa-users"></i> Manage Users</a></li>
					{#{% endif %}#}
					<li><a href="{{ site_url() }}logout"><i class="fa fa-sign-out"></i> Sign Out</a></li>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</nav>

	<div class="row">
		<div class="col-sm-12 notifications">
			{% include 'notifications.html.twig' %}
		</div>
	</div>

	<div class="container">

{% endblock %}

{% block main %}{% endblock %}

{% block footer %}

	</div><!-- /.container -->

	<!-- Bootstrap core JavaScript
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
	<script src="{{ site_url() }}assets/js/library/validate/jquery.validate.min.js"></script>

	{{ render_styles(scripts) }}
	</body>
</html>

{% endblock %}